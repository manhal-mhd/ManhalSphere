# Base configuration for Office-in-a-Box Micro Datacenter
# Copy this file to `.env` and adjust values before deployment.

# Core identity
BASE_DOMAIN=example.com
TIMEZONE=UTC

# Admin contact for certificates and alerts
LETSENCRYPT_EMAIL=admin@example.com

# Derived hostnames (can be overridden if needed)
PORTAL_HOST=portal.${BASE_DOMAIN}
ERP_HOST=erp.${BASE_DOMAIN}
MAIL_HOST=mail.${BASE_DOMAIN}
DNS_HOST=dns.${BASE_DOMAIN}
FILES_HOST=files.${BASE_DOMAIN}
PASSWORDS_HOST=pw.${BASE_DOMAIN}
STATUS_HOST=status.${BASE_DOMAIN}
DOCKER_UI_HOST=docker.${BASE_DOMAIN}

# Optional: wildcard certificate support (boolean-style flags)
USE_WILDCARD_CERT=true

# Docker runtime settings
PUID=1000
PGID=1000

# ERPNext / database (example values, change in real deployment)
ERP_DB_HOST=erp-db
ERP_DB_NAME=erpnext
ERP_DB_USER=erpnext
ERP_DB_PASSWORD=change_me
MARIADB_ROOT_PASSWORD=change_me_root

# Mailu integration hints (full Mailu config lives in mailu.env)
MAILU_VERSION=2.0
MAIL_DOMAIN=${BASE_DOMAIN}
MAIL_ADMIN_ADDRESS=postmaster@${BASE_DOMAIN}
